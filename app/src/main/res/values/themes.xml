<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MoviesApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_black</item>
        <item name="colorPrimaryVariant">@color/blue_black</item>
        <item name="colorAccent">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/blue_black</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/blue_light</item>
        <item name="android:textColorSecondary">@color/grey</item>
    </style>

</resources>